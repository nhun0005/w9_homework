{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 350,
    "title": "Average Precipitation (mm) in Cities Around the World (Aug 29-Sept 18)",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/nhun0005/w9_homework/main/map.json",
                "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/nhun0005/w9_homework/main/GlobalWeatherRepository_bubblemap.csv"
                },
                "key": "City",
                "fields": ["Avg_Precip_mm", "Avg_Temp_celsius"]
            }
        }
    ],
        "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white"
        }
    },
    {
        "data": {
            "url": "GlobalWeatherRepository_bubblemap.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
            "longitude": {"field": "Longitude", "type": "quantitative"},
            "latitude": {"field": "Latitude", "type": "quantitative"},
            "size": {
                "field": "Avg_Precip_mm",
                "type": "quantitative",
                "title": "Average Precipitation (mm)",
                "scale": {"domain": [0, 2]}
            },
            "color": {
                "field": "Avg_Temp_celsius",
                "type": "quantitative",
                "title": "Average Temperature (celsius)",
                "scale": {"scheme": "redblue", "reverse": true}
            }            
        }
    }
]
}


